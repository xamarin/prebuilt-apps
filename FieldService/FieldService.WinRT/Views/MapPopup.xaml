<UserControl
    x:Class="FieldService.WinRT.Views.MapPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FieldService.WinRT.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel Orientation="Vertical" Margin="-26,-131,0,0">
        <Grid Background="{StaticResource DarkTextBrush}" Width="225" Height="100">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Margin="10,0" Style="{StaticResource TextButtonStyle}" Content="{Binding Title}" />
            <Button Margin="10,0" Grid.Row="1" Style="{StaticResource TextButtonStyle}" Content="{Binding AddressFormatted}" />
        </Grid>
        <Image Stretch="None" Source="{StaticResource MapTriangleImage}" HorizontalAlignment="Left" />
    </StackPanel>
</UserControl>
